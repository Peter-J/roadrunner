[DXR]
enabled_plugins     = pygmentize clang
temp_folder         = /tmp/roadrunner-dxr-tmp
target_folder       = /home/poltergeist/home/devel/install/roadrunner-dxr3
nb_jobs             = 4

[roadrunner]
source_folder       = /home/poltergeist/home/devel/src/roadrunner/source
object_folder       = /home/poltergeist/home/devel/build/roadrunner-dxr3
build_command       = echo "pwd is " `pwd`; cmake -DCMAKE_INSTALL_PREFIX=~/home/devel/install/roadrunner -DTHIRD_PARTY_INSTALL_FOLDER=~/home/devel/install/roadrunner-tp -DLLVM_CONFIG_EXECUTABLE=/home/poltergeist/home/devel/install/llvm-3.5/bin/llvm-config -DCMAKE_BUILD_TYPE=Debug -DBUILD_PYTHON=OFF -DBUILD_TESTS=ON -DBUILD_TEST_TOOLS=ON ~/home/devel/src/roadrunner && make -j $jobs
